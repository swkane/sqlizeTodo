<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo - Node</title>
    <link rel="stylesheet" href="./public/style.css">
    <style type="text/css">
      li {
        /*color: blue;*/
        list-style: none;
        margin: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Todo List</h2>
      <form class="" action="/" method="post">
        <input type="text" name="task" value="" placeholder="Enter Your Task Here">
        <button type="submit" name="complete">Add Todo</button>
      </form>
      <ul class="todo-list">
        {{#list}}
            {{^isComplete}}
            <form class="" action="/complete" method="post">
              <li>
              <button type="submit" name="marked" value="{{todo}}">Mark as Complete</button>
              {{todo}}
              </li>
            </form>
            {{/isComplete}}
        {{/list}}
      </ul>
      <!-- Populate completed task when their button is clicked -->
      <h2>Completed Tasks</h2>
      <ul class="completed-list">
        {{#list}}
            {{#isComplete}}
              <li>
              {{todo}}
              </li>
            {{/isComplete}}
        {{/list}}
      </ul>
    </div>
  </body>
</html>
